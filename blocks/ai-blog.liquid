{% doc %}
  @prompt
    Create a blog section with three cards
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-cards-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-blog-cards__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-blog-cards__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
  }

  .ai-blog-cards__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    margin: 0;
    color: {{ block.settings.heading_color }};
  }

  .ai-blog-cards__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.card_spacing }}px;
  }

  .ai-blog-cards__card-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    border: {{ block.settings.card_border_thickness }}px solid {{ block.settings.card_border_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-blog-cards__card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .ai-blog-cards__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-top: {{ block.settings.image_aspect_ratio }}%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-blog-cards__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-blog-cards__image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-blog-cards__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-blog-cards__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-blog-cards__meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
    font-size: 14px;
    color: {{ block.settings.meta_color }};
  }

  .ai-blog-cards__date-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .ai-blog-cards__author-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .ai-blog-cards__card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    margin: 0 0 12px;
    color: {{ block.settings.card_title_color }};
    line-height: 1.3;
  }

  .ai-blog-cards__card-title-link-{{ ai_gen_id }} {
    color: inherit;
    text-decoration: none;
  }

  .ai-blog-cards__card-title-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-blog-cards__excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.excerpt_size }}px;
    color: {{ block.settings.excerpt_color }};
    line-height: 1.6;
    margin: 0 0 16px;
    flex-grow: 1;
  }

  .ai-blog-cards__read-more-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 14px;
    color: {{ block.settings.read_more_color }};
    text-decoration: none;
    font-weight: 500;
    transition: gap 0.3s ease;
  }

  .ai-blog-cards__read-more-{{ ai_gen_id }}:hover {
    gap: 10px;
    color: {{ block.settings.link_hover_color }};
  }

  .ai-blog-cards__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-blog-cards__empty-state-{{ ai_gen_id }} h3 {
    font-size: 20px;
    margin: 0 0 8px;
  }

  .ai-blog-cards__empty-state-{{ ai_gen_id }} p {
    font-size: 14px;
    margin: 0;
  }

  @media screen and (max-width: 989px) {
    .ai-blog-cards__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-blog-cards__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-blog-cards__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-blog-cards__card-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.card_title_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<blog-cards-{{ ai_gen_id }} class="ai-blog-cards-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-blog-cards__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <div class="ai-blog-cards__header-{{ ai_gen_id }}">
        <h2 class="ai-blog-cards__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      </div>
    {% endif %}

    {% if block.settings.blog != blank %}
      <div class="ai-blog-cards__grid-{{ ai_gen_id }}">
        {% for article in block.settings.blog.articles limit: 3 %}
          <article class="ai-blog-cards__card-{{ ai_gen_id }}">
            <div class="ai-blog-cards__image-wrapper-{{ ai_gen_id }}">
              {% if article.image %}
                <img
                  src="{{ article.image | image_url: width: 800 }}"
                  alt="{{ article.image.alt | escape }}"
                  class="ai-blog-cards__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="800"
                  height="{{ 800 | divided_by: article.image.aspect_ratio | round }}"
                >
              {% else %}
                <div class="ai-blog-cards__image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-blog-cards__content-{{ ai_gen_id }}">
              {% if block.settings.show_date or block.settings.show_author %}
                <div class="ai-blog-cards__meta-{{ ai_gen_id }}">
                  {% if block.settings.show_date %}
                    <span class="ai-blog-cards__date-{{ ai_gen_id }}">
                      <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12.6667 2.66667H3.33333C2.59695 2.66667 2 3.26362 2 4V13.3333C2 14.0697 2.59695 14.6667 3.33333 14.6667H12.6667C13.403 14.6667 14 14.0697 14 13.3333V4C14 3.26362 13.403 2.66667 12.6667 2.66667Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M10.6667 1.33333V4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M5.33333 1.33333V4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M2 6.66667H14" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                      {{ article.published_at | date: '%B %d, %Y' }}
                    </span>
                  {% endif %}

                  {% if block.settings.show_author %}
                    <span class="ai-blog-cards__author-{{ ai_gen_id }}">
                      <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M13.3333 14V12.6667C13.3333 11.9594 13.0524 11.2811 12.5523 10.781C12.0522 10.281 11.3739 10 10.6667 10H5.33333C4.62609 10 3.94781 10.281 3.44772 10.781C2.94762 11.2811 2.66667 11.9594 2.66667 12.6667V14" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M8 7.33333C9.47276 7.33333 10.6667 6.13943 10.6667 4.66667C10.6667 3.19391 9.47276 2 8 2C6.52724 2 5.33333 3.19391 5.33333 4.66667C5.33333 6.13943 6.52724 7.33333 8 7.33333Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                      {{ article.author }}
                    </span>
                  {% endif %}
                </div>
              {% endif %}

              <h3 class="ai-blog-cards__card-title-{{ ai_gen_id }}">
                <a href="{{ article.url }}" class="ai-blog-cards__card-title-link-{{ ai_gen_id }}">
                  {{ article.title }}
                </a>
              </h3>

              {% if block.settings.show_excerpt and article.excerpt != blank %}
                <div class="ai-blog-cards__excerpt-{{ ai_gen_id }}">
                  {{ article.excerpt | strip_html | truncate: block.settings.excerpt_length }}
                </div>
              {% endif %}

              {% if block.settings.show_read_more %}
                <a href="{{ article.url }}" class="ai-blog-cards__read-more-{{ ai_gen_id }}">
                  {{ block.settings.read_more_text }}
                  <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </a>
              {% endif %}
            </div>
          </article>
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-blog-cards__empty-state-{{ ai_gen_id }}">
        <h3>No blog selected</h3>
        <p>Select a blog to display articles</p>
      </div>
    {% endif %}
  </div>
</blog-cards-{{ ai_gen_id }}>

<script>
  (function() {
    class BlogCards{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.initializeCards();
      }

      initializeCards() {
        const cards = this.querySelectorAll('.ai-blog-cards__card-{{ ai_gen_id }}');
        cards.forEach(card => {
          card.addEventListener('mouseenter', this.handleCardHover.bind(this));
          card.addEventListener('mouseleave', this.handleCardLeave.bind(this));
        });
      }

      handleCardHover(event) {
        const card = event.currentTarget;
        card.style.transform = 'translateY(-4px)';
      }

      handleCardLeave(event) {
        const card = event.currentTarget;
        card.style.transform = 'translateY(0)';
      }
    }

    customElements.define('blog-cards-{{ ai_gen_id }}', BlogCards{{ ai_gen_id }});
  })();
</script>

